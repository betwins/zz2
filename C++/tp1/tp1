#ifndef TP1
#define TP1

#include <iostream>
#include <string>

class Point
{
    int x; //par défaut en private
    int y;
    static int compteur;

public:
    // Constructeur par défaut:
    Point(); // Toujours appeler le ou les constructeur(s) du nom de la classe
    // Constructeur complet:
    Point(int, int);
    int getCompteur();
    int getX();
    int getY();
    void setX(int);
    void setY(int);
    void deplacerDe(int dx, int dy);
    void deplacerVers(int px, int py);

};

#endif
